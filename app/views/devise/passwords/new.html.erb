<style>
  body{
    text-align: center!important;
  }
  .form-signin{
    width: 100%;
    max-width: 330px;
    padding: 15px;
    margin: auto;
  }
</style>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {class: "form-signin", method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h1 class="h3 mb-3 font-weight-normal">Olvido la contrase√±a?</h1>

  <div class="form-group">
    <label for="inputEmail" class="sr-only">Direccion de correo</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", type: "email", class: "form-control", placeholder: "Direccion de correo" %>
  </div>

  <div class="actions">
    <%= f.submit "Enviar", class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
