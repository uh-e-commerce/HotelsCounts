<style>
  body{
    text-align: center!important;
  }
  .form-signin{
    width: 100%;
    max-width: 330px;
    padding: 15px;
    margin: auto;
  }
</style>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h1 class="h3 mb-3 font-weight-normal">Bienvenido</h1>

  <div class="form-group">
    <label for="inputEmail" class="sr-only">Direccion de correo</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", type: "email", class: "form-control", placeholder: "Direccion de correo" %>
  </div>

  <div class="form-group">
    <label for="inputPassword" class="sr-only">Contraseña</label>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
    <% end %><br />
    <%= f.password_field :password, type: "password", class: "form-control", placeholder: "Contraseña", autocomplete: "new-password" %>
  </div>

  <div class="form-group">
    </div>

  <div class="form-group">
    <label for="user_password_confirmation">Confirme la contraseña</label>
    <%= f.password_field :password_confirmation, type: "password", class: "form-control", placeholder: "Contraseña", autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Regístrate", class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
