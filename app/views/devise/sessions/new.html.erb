<style>
  body{
    text-align: center!important;
  }
  .form-signin{
    width: 100%;
    max-width: 330px;
    padding: 15px;
    margin: auto;
  }
</style>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <h1 class="h3 mb-3 font-weight-normal">Bienvenido</h1>

  <div class="form-group">
    <label for="inputEmail" class="sr-only">Direccion de correo</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", type: "email", class: "form-control", placeholder: "Email address" %>
  </div>

  <div class="form-group">
    <label for="inputPassword" class="sr-only">Contraseña</label>
    <%= f.password_field :password, type: "password", class: "form-control", placeholder: "Password", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="checkbox mb-3">
      <%= f.check_box :remember_me %>
      <label for="user_remember_me">Recuérdame</label>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Iniciar sesión", class: "btn btn-lg btn-primary btn-block" %>
  </div>

  <%= render "devise/shared/links" %>
<% end %>

