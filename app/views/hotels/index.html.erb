<p id="notice"><%= notice %></p>



<div class="table-responsive container">
  <h1>Hoteles</h1>

  <table class="table table-bordered table-hover table-sm">
    <thead>
    <tr>
      <th>Name</th>
      <th colspan="4"></th>
    </tr>
    </thead>

    <tbody>
    <% @hotels.each do |hotel| %>
      <tr>
        <td><%= hotel.name %></td>
        <td><%= link_to 'Show', hotel %></td>
        <td><%= link_to 'Edit', edit_hotel_path(hotel) %></td>
        <td><%= link_to 'New Report', new_hotel_report_path(hotel) %></td>
        <td><%= link_to 'Destroy', hotel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <%= link_to 'New Hotel', new_hotel_path, class: "btn btn-primary" %>
</div>

<br>

